#!/usr/bin/env bash

# ================================================================================
# =                                 NVIM_BACKUP                                  =
# ================================================================================

# Backup Neovim configuration to dual restic repositories
# - Backs up to local Pi (R1) and cloud B2 (R2)
# - Prunes old snapshots, keeping last 7

set -euo pipefail

# Backup
restic -r "$R1" backup ~/.config/nvim --tag nvim
restic -r "$R2" backup ~/.config/nvim --tag nvim

# Prune
restic -r "$R1" forget --tag nvim --keep-last 7 --prune
restic -r "$R2" forget --tag nvim --keep-last 7 --prune

echo "Neovim backup completed successfully"
