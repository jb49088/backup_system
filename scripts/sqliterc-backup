#!/usr/bin/env bash

# ================================================================================
# =                               SQLITERC-BACKUP                                =
# ================================================================================

# Backup sqliterc to dual restic repositories
# - Backs up to local Pi (R1) and cloud B2 (R2)
# - Prunes old snapshots, keeping last 1

set -euo pipefail

# Backup
restic -r "$R1" backup ~/.sqliterc --tag sqliterc
restic -r "$R2" backup ~/.sqliterc --tag sqliterc

# Prune
restic -r "$R1" forget --tag sqliterc --keep-last 1 --prune
restic -r "$R2" forget --tag sqliterc --keep-last 1 --prune

echo "sqliterc backup completed successfully"
