#!/usr/bin/env bash

# ================================================================================
# =                              POWERSHELL-BACKUP                               =
# ================================================================================

# Backup PowerShell scripts to dual restic repositories
# - Backs up to local Pi (R1) and cloud B2 (R2)
# - Prunes old snapshots, keeping last 7

set -euo pipefail

# Backup
restic -r "$R1" backup ~/powershell --tag powershell
restic -r "$R2" backup ~/powershell --tag powershell

# Prune
restic -r "$R1" forget --tag powershell --keep-last 7 --prune
restic -r "$R2" forget --tag powershell --keep-last 7 --prune

echo "PowerShell backup completed successfully"
