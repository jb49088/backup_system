#!/usr/bin/env bash

# ================================================================================
# =                                ZELLIJ-BACKUP                                 =
# ================================================================================

# Backup Zellij configuration to dual restic repositories
# - Backs up to local Pi (R1) and cloud B2 (R2)
# - Prunes old snapshots, keeping last 1

set -euo pipefail

# Backup
restic -r "$R1" backup ~/.config/zellij --tag zellij
restic -r "$R2" backup ~/.config/zellij --tag zellij

# Prune
restic -r "$R1" forget --tag zellij --keep-last 1 --prune
restic -r "$R2" forget --tag zellij --keep-last 1 --prune

echo "Zellij backup completed successfully"
